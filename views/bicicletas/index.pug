extends ../layout

block content
    a(href='/bicicletas/create') Nueva Bicicleta
    
    table.table
        thead
            tr
                th(scope='cot') #
                th(scope='cot') color
                th(scope='cot') modelo
                th(scope='cot') ubicacion
                th(scope='cot')

        tbody
            each bici in bicis
                tr
                    td(scope='row')
                        = bici.id
                    td= bici.color
                    td= bici.modelo
                    td= bici.ubicacion
                    td
                        a(href= 'bicicletas/' + bici.id + '/update') Editar

                    td
                        form.inline(method='post' action="bicicletas/"+ bici.id + '/delete')
                            input(type="hidden" name='id' value= bici.id)
                            button.link-button(type='sumit' name='sbmit_param' value='submit_value' class='btn')
                                ='Eliminar' 
                